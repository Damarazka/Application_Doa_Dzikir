<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.SplashScreenBase" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/mint</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_fix</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.App.NoActionBar</item>
        <item name="android:animationDuration">@android:integer/config_longAnimTime</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.NoActionBar." parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/morning_blue</item>
    </style>
</resources>